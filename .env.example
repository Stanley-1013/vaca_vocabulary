# Environment Variables Template
# Copy this file to .env and update with your actual values

# Development server configuration
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost

# API Configuration
# Google Apps Script Web App URL (替換為你的實際URL)
VITE_API_BASE_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Feature Flags (可選，會覆蓋localStorage設定)
# VITE_FEATURE_BACKEND_INTEGRATION=true
# VITE_FEATURE_LLM_QUIZ=false
# VITE_FEATURE_TELEMETRY=false

# Debug and Development
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Build Configuration  
VITE_BUILD_TARGET=es2015
VITE_BUILD_SOURCEMAP=true

# Security (for future use)
# VITE_API_TIMEOUT=30000
# VITE_RETRY_ATTEMPTS=3

# Analytics (for future use)
# VITE_GA_TRACKING_ID=
# VITE_POSTHOG_KEY=